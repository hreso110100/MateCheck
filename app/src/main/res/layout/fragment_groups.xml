<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/groups_root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".home.groups.GroupsFragment">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content">

        <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/groups_collapse_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed">

            <TextView
                    android:id="@+id/groups_groups_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/groups_text"
                    android:layout_marginTop="80dp"
                    android:layout_marginBottom="16dp"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="44sp"
                    android:textStyle="bold"
                    app:layout_collapseMode="parallax"/>

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/groups_constraint_layout"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            android:layout_height="match_parent">

        <com.google.android.material.button.MaterialButton
                android:id="@+id/groups_search"
                android:layout_width="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/search"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:textAlignment="textStart"
                android:gravity="start|center_vertical"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="@android:color/white"
                app:icon="@drawable/ic_search_black_24dp"
                android:layout_height="60dp"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/groups_info_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/groups_search"
                app:layout_constraintBottom_toTopOf="@id/groups_recycle_layout"
                android:textColor="@android:color/white"
                android:text="@string/groups_info"/>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/groups_recycle_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:clipToPadding="false"
                android:layout_marginBottom="56dp"
                app:layout_constraintTop_toBottomOf="@id/groups_info_text"
                app:layout_constraintEnd_toEndOf="parent"
                android:scrollbars="vertical"
                android:overScrollMode="never"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

        </androidx.recyclerview.widget.RecyclerView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ProgressBar
            android:id="@+id/groups_progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="@color/colorPrimary"
            android:visibility="gone"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/groups_float_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@android:color/white"
            app:tint="@color/colorPrimary"
            android:layout_gravity="bottom|end"
            app:elevation="5dp"
            app:srcCompat="@drawable/ic_add_white_24dp"
            android:layout_marginBottom="80dp"
            android:layout_marginEnd="32dp"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>