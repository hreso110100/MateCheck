<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".home.profile.ProfileFragment">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/home_profile_photo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="16dp"
            android:layout_width="164dp"
            android:layout_height="164dp"
            app:civ_border_width="4dp"
            app:civ_border_color="@android:color/white"
            app:layout_constraintVertical_bias="0.084"/>

    <TextView
            android:id="@+id/home_profile_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/home_profile_photo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="16dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/home_profile_inner_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_profile_username">

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/home_profile_groups_label_value"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/home_profile_groups_label_text"
                app:layout_constraintStart_toStartOf="@id/home_profile_groups_label_text"
                app:layout_constraintEnd_toEndOf="@+id/home_profile_groups_label_text"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:text="@string/default_counter"
                android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/home_profile_groups_label_text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:text="@string/title_groups"
                android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/home_profile_tasks_label_value"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/home_profile_tasks_label_text"
                app:layout_constraintStart_toStartOf="@id/home_profile_tasks_label_text"
                app:layout_constraintEnd_toEndOf="@id/home_profile_tasks_label_text"
                android:layout_marginTop="16dp"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:text="@string/default_counter"
                android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/home_profile_tasks_label_text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:layout_width="wrap_content"
                android:text="@string/title_tasks"
                android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/home_profile_friends_label_value"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/home_profile_friends_label_text"
                app:layout_constraintEnd_toEndOf="@id/home_profile_friends_label_text"
                app:layout_constraintStart_toStartOf="@id/home_profile_friends_label_text"
                android:layout_marginTop="16dp"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:text="@string/default_counter"
                android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/home_profile_friends_label_text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:text="@string/friends"
                android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/home_profile_find_friends"
            style="@style/circledButton"
            android:layout_width="140dp"
            android:textSize="14sp"
            android:textAllCaps="true"
            app:cornerRadius="25dp"
            android:enabled="true"
            android:alpha="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_profile_inner_layout"
            android:text="@string/add_friends"/>

    <ProgressBar
            android:id="@+id/profile_progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:indeterminateTint="@color/colorPrimary"
            android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>